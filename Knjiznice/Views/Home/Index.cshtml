@{
    ViewData["Title"] = "Knjižnice Sesvete";
}

<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="katalog">
                <h2 class="mdl-card__title-text homeLabel">Katalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Pregled građe.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Katalog" asp-action="Index">
                    Pregledaj katalog
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="clanovi">
                <h2 class="mdl-card__title-text homeLabel">Članovi</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Podaci o članovima.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Clan" asp-action="Index">
                    Pregledaj članove
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="knjiznice">
                <h2 class="mdl-card__title-text homeLabel">Knjižnice</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Podaci o knjižnicama
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Knjiznice" asp-action="Index">
                    Pregledaj knjižnice
                </a>
            </div>
        </div>
    </div>
</div>